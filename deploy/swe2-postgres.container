[Unit]
Description=SWE 2 PostgreSQL
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/library/postgres:18
ContainerName=postgres18
Network=swe2
Volume=/path/to/host/postgres18:/var/lib/postgresql:Z,U
ShmSize=256m
Timezone=UTC

# Postgres environment
Environment=POSTGRES_PASSWORD=changeme-postgres-password
Environment=POSTGRES_USER=postgres
Environment=POSTGRES_DB=isisdb

[Service]
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
